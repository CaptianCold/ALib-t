{
  "name": "angular-library",
  "description": "This project is to create and maintain reusable Angular components, directives, services which could be shared across LSMS projects",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --force \"src/**/*.ts\"",
    "test": "karma start",
    "posttest-coverage": "remap-istanbul -i coverage/coverage-final.json -o coverage/html -t html",
    "test-watch": "karma start --no-single-run --auto-watch",
    "bundling": "rollup -c",
    "clean-src" : "rimraf index.ngsummary.json src/**/*.ngsummary.json src/**/*.ngfactory.ts src/**/*.ngstyle.ts",
    "minify": "uglifyjs dist/bundles/angular-shared-module.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular-shared-module.umd.min.js",
    "compodoc" : "compodoc -p tsconfig-compodoc.json -d ./dist/doc",
    "build": "rimraf dist && ngc && gulp && npm run bundling && npm run minify && npm run clean-src && npm run compodoc"
  },
  "dependencies": {
    "@angular/common": "4.3.2",
    "@angular/core": "4.3.2",
    "@angular/forms": "4.3.2",
    "@angular/router": "4.3.2",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.4.1",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/compiler": "4.3.2",
    "@angular/compiler-cli": "4.3.2",
    "@angular/platform-browser": "4.3.2",
    "@angular/platform-browser-dynamic": "4.3.2",
    "@types/jasmine": "~2.5.53",
    "@types/node": "~6.0.60",
    "@compodoc/compodoc" : "1.0.0-beta.14",
    "copyfiles": "^1.0.0",
    "gulp": "^3.9.1",
    "gulp-sass": "^2.3.2",
    "gulp-rename" : "1.2.2",
    "gulp-inline-ng2-template" : "4.0.0",
    "rimraf": "^2.5.1",
    "rollup": "^0.37.0",
    "tslint": "~5.3.2",
    "typescript": "2.3.3",
    "uglify-js": "^2.7.5",
    "jasmine": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.0",
    "karma-mocha-reporter": "2.0.4",
    "karma-jasmine": "1.0.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "node-static": "^0.7.9",
    "raw-loader": "^0.5.1",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "3.2.2",
    "webpack": "2.1.0-beta.25",
    "node-sass": "4.4.0",
    "style-loader" : "0.13.1",
    "sass-loader": "4.1.1",
    "css-loader" : "0.26.1",
    "remap-istanbul": "0.8.4"
  },
  "files": [
    "dist"
    ]
}
